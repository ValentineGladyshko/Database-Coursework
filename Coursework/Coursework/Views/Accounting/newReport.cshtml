@{
    var model1 = new Coursework.Models.Date();
}

@{
    ViewBag.Title = "Report";
}

<h2>Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Date</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="DateStart">Початкова Дата</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model1.DateStart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model1.DateStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="DateEnd">Кінцева Дата</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model1.DateEnd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model1.DateEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

 
    @if(@Html.ValidationSummary(false, "", new { @class = "text-danger" }).ToString() == "")
    {
        <h4>yvubhinjmkl</h4>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
}
